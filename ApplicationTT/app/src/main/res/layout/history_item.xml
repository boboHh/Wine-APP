<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:id="@+id/history_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:textColor="#bdbdbd"/>
    <TextView
        android:id="@+id/history_item_name"
        android:layout_toRightOf="@id/history_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="福特琅玕特级葡萄酒"
        android:textSize="16sp"
        android:layout_marginLeft="18dp"
        android:textColor="#f5f5f5"/>
    <TextView
        android:layout_toRightOf="@id/history_item_num"
        android:layout_below="@id/history_item_name"
        android:id="@+id/history_item_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="西班牙"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        android:textColor="#757575"/>
    <TextView
        android:layout_below="@id/history_item_name"
        android:layout_toRightOf="@id/history_item_place"
        android:id="@+id/history_item_winery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某某酒庄"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:textColor="#757575"/>
</RelativeLayout>